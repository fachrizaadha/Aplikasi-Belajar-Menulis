<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbebek"
    tools:context="com.example.root.disgraphia.Duck">


    <com.radefffactory.paint.CanvasView
        android:id="@+id/canvas"
        android:layout_marginTop="50dp"
        android:layout_width="600dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="180dp"
        android:background="@drawable/bebek" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="BEBEK"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="250dp"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/b_clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:layout_marginStart="580dp"
        android:layout_marginLeft="580dp"
        android:background="@drawable/b_reload"
        android:onClick="clearCanvas"
        tools:ignore="contentDescription"/>


</android.widget.RelativeLayout>